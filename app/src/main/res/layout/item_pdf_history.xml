<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPdfItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/md_theme_light_surfaceVariant">

        <!-- Vista previa del PDF -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/ivPdfPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/md_theme_light_surface"
                android:contentDescription="@string/cd_pdf_preview" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Contenido de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Título del PDF -->
            <TextView
                android:id="@+id/tvPdfTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/sample_pdf_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurface"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Metadata -->
            <TextView
                android:id="@+id/tvPdfMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Página 10 de 50 • hace 2 h"
                android:textSize="13sp"
                android:textColor="@color/md_theme_light_outline"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif" />

            <!-- Barra de progreso con porcentaje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/progress_drawable_rounded"
                    android:progress="20"
                    android:max="100" />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="20%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
