<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardLastPdfContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/md_theme_light_primaryContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título del PDF -->
        <TextView
            android:id="@+id/tvPdfTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Mi documento PDF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onPrimaryContainer"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Metadata (Página X de Y) -->
        <TextView
            android:id="@+id/tvPdfMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Página 10 de 50"
            android:textSize="14sp"
            android:textColor="@color/md_theme_light_onPrimaryContainer"
            android:alpha="0.8"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif" />

        <!-- Última lectura -->
        <TextView
            android:id="@+id/tvLastRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Leído hace 2 horas"
            android:textSize="13sp"
            android:textColor="@color/md_theme_light_onPrimaryContainer"
            android:alpha="0.7"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif" />

        <!-- Barra de progreso con porcentaje -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/progress_drawable_rounded"
                tools:progress="20"
                android:max="100" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_primary"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

