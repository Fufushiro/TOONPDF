<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle Image Style for Avatar -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Navigation label text appearances -->
    <style name="TextAppearance.BottomNav.Active" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.BottomNav.Inactive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Popup Menu Style with Rounded Corners and Right Alignment -->
    <style name="Widget.PDFTOON.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_popup_background</item>
        <item name="android:popupElevation">12dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="Widget.PDFTOON.PopupMenu.Overflow" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/menu_popup_background</item>
        <item name="android:popupElevation">12dp</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:overlapAnchor">false</item>
    </style>
</resources>
